{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
        "padding": {
            "top": 2
        }
    },
    "display": {
        "percentType": 9 // colored percent number
    },
    "modules": [
        "title",
        "separator",

        "host",
        "display",
        "cpu",
        "gpu",
        "memory",
        "disk",
        "battery",
	
        "break",

        "os",
        "kernel",
        "de",
        "wm",
        "wmtheme",
        "theme",
        "icons",
        "shell",
        "font",
        "cursor",
        "terminal",
        "terminalfont",

        "break",

	"opengl",
	"vulkan",
        "poweradapter",

        "break",

        "sound",
        "uptime",
        "wifi",
        "localip",
	"publicip",
        "break",
	{
            "type": "colors",
            "paddingLeft": 11,
            "symbol": "circle"
        }
    ]
}
